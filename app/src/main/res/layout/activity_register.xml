<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/loginbackground"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/image_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="650dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="80dp"
        android:text="@string/crea_tu_cuenta"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="250dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@id/text_login"
        app:layout_constraintTop_toBottomOf="@id/text_login"
        android:hint="@string/correo"
        android:layout_marginTop="40dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="250dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@id/text_login"
        app:layout_constraintTop_toBottomOf="@id/edit_text_email"
        android:layout_marginTop="40dp"
        android:hint="@string/contrase_a"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/edit_text_confirm_password"
        android:layout_width="250dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@id/text_login"
        app:layout_constraintTop_toBottomOf="@id/edit_text_password"
        android:layout_marginTop="40dp"
        android:hint="@string/confirma_tu_contrase_a"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="250dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@id/text_login"
        app:layout_constraintTop_toBottomOf="@id/edit_text_confirm_password"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/darkRed"
        android:text="@string/registrarse"/>


</androidx.constraintlayout.widget.ConstraintLayout>