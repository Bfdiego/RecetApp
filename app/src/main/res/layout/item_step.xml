<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greyBlue">

    <TextView
        android:id="@+id/text_number_step"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text=""
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="30dp"
        android:background="@color/darkBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_view_name_step"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text=""
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/darkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_number_step"
        app:layout_constraintTop_toTopOf="@id/text_number_step"/>
    
    <TextView
        android:id="@+id/text_view_description_step"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text=""
        android:background="@color/darkBlue"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_number_step"
        app:layout_constraintStart_toStartOf="@id/text_number_step"
        app:layout_constraintEnd_toEndOf="@id/text_view_name_step"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/greyBlue"
        app:layout_constraintTop_toBottomOf="@id/text_view_description_step"/>


</androidx.constraintlayout.widget.ConstraintLayout>