<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greyBlue">

    <ImageButton
        android:id="@+id/image_button_recipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="2:3"
        android:scaleType="centerCrop"
        android:src="@color/white"/>

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@color/darkBlue"
        app:layout_constraintStart_toStartOf="@id/image_button_recipe"
        app:layout_constraintEnd_toEndOf="@id/image_button_recipe"
        app:layout_constraintTop_toBottomOf="@id/image_button_recipe"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>